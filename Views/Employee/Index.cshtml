        <button style="padding: 15px 30px; font-size: 20px; background-color: #4CAF50; color: white; border: none; cursor: pointer; border-radius: 8px; width: 200px; transition: background-color 0.3s;">
            @Html.ActionLink("New Employee Signup", "EmployeeForm", "Employee")
